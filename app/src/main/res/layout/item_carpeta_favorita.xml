<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:background="@drawable/bg_carpeta_favorita"
    android:padding="12dp"
    android:layout_margin="8dp"
    android:elevation="3dp">

    <!-- Icono de carpeta -->
    <ImageView
        android:id="@+id/iconCarpeta"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_carpeta"
        android:layout_gravity="center"
        android:contentDescription="Ícono de carpeta" />

    <!-- Nombre carpeta / universidad -->
    <TextView
        android:id="@+id/txtNombreCarpeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Universidad Privada del Norte"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- Autor -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/avatar_default"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/txtAutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4ndy3chenique"
            android:textSize="12sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Documentos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/txtNumDocumentos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 documentos"
            android:textSize="12sp"
            android:textColor="@android:color/black" />
    </LinearLayout>
</LinearLayout>
