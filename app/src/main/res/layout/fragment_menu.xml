<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="317dp"
    android:layout_height="850dp"
    android:layout_gravity="center_vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp">

        <!-- Perfil del usuario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:paddingTop="0dp"
            android:gravity="end">


            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="180dp"
                android:orientation="vertical"
                android:gravity="center">
            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="start"
                android:src="@drawable/ic_avatar_default"
                android:background="@drawable/circle_background"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Andy Echenique"
                android:layout_gravity="start"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtCorreo"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:text="andy974275@gmail.com"
                android:textSize="14sp"
                android:textColor="#888888" />
            </LinearLayout>
        </LinearLayout>

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp"/>

        <!-- Opciones -->
        <LinearLayout
            android:id="@+id/opcionInicio"
            style="@style/MenuItemStyle">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/iconhome"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textColor="#666666"
                android:textSize="16dp"
                android:layout_marginStart="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/opcionResenas"
            style="@style/MenuItemStyle">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_star"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rese침as"
                android:textColor="#666666"
                android:textSize="16dp"
                android:layout_marginStart="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/opcionVerificacion"
            style="@style/MenuItemStyle">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_verification"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verificaci칩n"
                android:textSize="16dp"
                android:textColor="#666666"
                android:layout_marginStart="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/opcionConfiguracion"
            style="@style/MenuItemStyle">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configuraci칩n"
                android:textSize="16dp"
                android:textColor="#666666"
                android:layout_marginStart="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/opcionCerrarSesion"
            style="@style/MenuItemStyle">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_logout"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cerrar sesi칩n"
                android:textSize="16dp"
                android:textColor="#666666"
                android:layout_marginStart="20dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
